
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%=path_to_image('banner2.jpg')%>')">
  <div class="container">
    <h1>Create your movie list</h1>
    <div class="typed-js-cont">
      <h3 class="typed-js" data-controller="typed-js"></h3>
    </div>
  </div>
</div>


<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3>My Lists</h3>
    <%# <%= link_to 'Create new list', new_list_path, class: 'btn btn-primary' %>
  </div>

 <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path('background.jpg') %>')">
        <%= link_to list.name, list_path(list) %>

        <div class="card-actions">
          <%= link_to '<i class="fas fa-trash"></i>'.html_safe,
          list_path(list),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div>
